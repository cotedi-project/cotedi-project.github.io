{
  "name": "cotedi-project.github.io",
  "version": "1.0.0",
  "description": "Site Generator for the CoTEDI Project",
  "main": "",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "lint": "eslint src/ ; stylelint scss/*.scss",
    "quickfix": "eslint src/ --fix ; stylelint scss/*.scss --fix",
    "css-compile": "sass --load-path node_modules --style compressed --source-map scss:assets/css/",
    "css-prefix": "postcss --replace assets/css/main.css --use autoprefixer --map",
    "css": "npm-run-all css-compile css-prefix",
    "fetch-fonts": "mkdir -p assets/css/fonts && cp -r node_modules/bootstrap-icons/font/fonts assets/css/fonts",
    "render": "eleventy",
    "all": "npm-run-all css fetch-fonts render",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "CoTEDI Project and Contributors",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@eslint/js": "^8.56.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "globals": "^13.24.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "sass": "^1.69.7",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.3"
  }
}
